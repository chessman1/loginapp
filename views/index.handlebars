
<form method="post" action="/users/changepass">

  <div class="form-group">
    <label>Type your old password</label>
    <input type="password" class="form-control" placeholder="Old password" name="oldpasswd">
  </div>

  <div class="form-group">
    <label>Type your new password</label>
    <input type="password" class="form-control" placeholder="New password" name="newpasswd">
  </div>

  <div class="form-group">
    <label>Confirm your new password</label>
    <input type="password" class="form-control" placeholder="Confirm new password" name="newpasswd2">
  </div>
  
  <button type="submit" class="btn btn-default">Submit</button>
</form>